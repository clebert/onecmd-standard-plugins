{
  "name": "@onecmd/standard-plugins",
  "version": "0.8.0",
  "description": "A set of standard plugins for use with onecmd.",
  "bugs": {
    "url": "https://github.com/clebert/onecmd-standard-plugins/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/onecmd-standard-plugins.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "main": "./lib/cjs/index.js",
  "types": "./lib/cjs/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "bootstrap": "tsc src/*.ts --module CommonJS --outDir lib/cjs --declaration --esModuleInterop --lib ES2017 --target ES2017",
    "preci": "run-s bootstrap setup",
    "ci": "run-p compile fmt:check lint",
    "clean": "git clean -fdx",
    "compile": "onecmd compile",
    "fmt": "onecmd fmt",
    "fmt:check": "onecmd fmt --check",
    "lint": "onecmd lint",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "setup": "onecmd setup"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.3",
    "@types/node": "^16.7.13",
    "npm-run-all": "^4.1.5"
  },
  "peerDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.0",
    "onecmd": "^0.8.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
